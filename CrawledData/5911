<script type= "text/javascript">
   function show(count){

     $.each($("div[id^='div_']"),function(){
        $(this).hide();
       if($(this).attr("id")=="div_"+count){
       $(this).attr("style","{display:block}");
       }
     });
   }
  $(document).ready(function(){
     var loc = document.location.hash;
       if(loc!=0&&loc!=null&&loc!='#'){
       var id = "div_"+loc.substring(1);
        $("div[id^='div_']").css("display","none");
        $("div[id='"+id+"']").css("display","block");
       }
  });
</script>
</head>

